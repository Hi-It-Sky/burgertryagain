<h1>Burgers!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you ate!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eat?</label><br>
    <input type="radio" name="devoured" value="1" checked> Uneaten<br>
    <input type="radio" name="devoured" value="0"> Yummy!
  </div>

  <button type="submit">Order burger</button>
</form>
